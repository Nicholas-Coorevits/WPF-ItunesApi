<Window x:Class="ItunesApi.SongList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItunesApi"
        mc:Ignorable="d" FontSize="22" Loaded="Window_Loaded"
        Title="List Window" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="2,0,18,0" Width="360">
            <Button x:Name="ClearButton" Padding="15" Margin="15" Width="328" Click="ClearButton_Click">Clear</Button>
        </StackPanel>
        <GroupBox Header="Saved Songs" HorizontalAlignment="Center" Height="309" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="748">
            <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="260" Margin="10,0,0,0" TextWrapping="Wrap" Width="718"/>
        </GroupBox>


    </Grid>
</Window>
